			<Button name="SmokeyLootFrameTab3" inherits="CharacterFrameTabButtonTemplate" id="3" text="Raid">
				<Anchors>
				   <Anchor point="LEFT" relativeTo="SmokeyLootFrameTab2" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-16" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						PanelTemplates_Tab_OnClick(SmokeyLootFrame)
						SmokeyLoot_SwitchTab("raid")
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText("Raid")
					</OnEnter>
					<OnLeave>
