				<Scripts>
					<OnHide>
						SmokeyLootEditEntryFrame_OnHide()
					</OnHide>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				SmokeyLootFrame_OnLoad()
			</OnLoad>
			<OnEvent>
				SmokeyLootFrame_OnEvent()
			</OnEvent>
			<OnDragStart>
				if this:IsMovable() then
					this:StartMoving()
				end
			</OnDragStart>
			<OnDragStop>
				if this:IsMovable() then
					this:StopMovingOrSizing()
				end
			</OnDragStop>
		</Scripts>
